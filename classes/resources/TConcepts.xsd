<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<!-- ======= APPLICATIONSET ======= -->
	<xs:complexType name="ApplicationSet">
		<xs:attribute name="name" type="xs:string" use="required"/>
	</xs:complexType>
	<!-- ======= APPLICATION ======= -->
	<xs:complexType name="Application">
		<xs:attribute name="name" type="xs:string" use="required"/>
		<xs:attribute name="deadline" type="xs:float" use="required"/>
	</xs:complexType>
	<!-- ======= EVENT ============ -->
	<xs:complexType name="Event">
		<xs:attribute name="name" type="xs:string" use="required"/>		
	</xs:complexType>
	<!-- ======= ACTION =========== -->
	<xs:complexType name="Action">
		<xs:attribute name="type" type="TType" use="required"/>
		<xs:attribute name="target" type="xs:string" use="required"/>
		<xs:attribute name="order" type="xs:positiveInteger" use="optional"/>		
	</xs:complexType>
	<xs:simpleType name="TType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="create"/>
			<xs:enumeration value="destroy"/>
		</xs:restriction>
	</xs:simpleType>
	<!-- ======= COMPONENT ======= -->
	<xs:simpleType name="Tactivation">
		<xs:restriction base="xs:string">
			<xs:enumeration value="periodic"/>
			<xs:enumeration value="onDemand"/>
		</xs:restriction>
	</xs:simpleType>
	<xs:complexType name="Component">
		<xs:sequence minOccurs="0">
			<xs:element name="restrictionList" maxOccurs="unbounded">
				<xs:complexType>
					<xs:sequence>
						<xs:element name="restriction" maxOccurs="unbounded">
							<xs:complexType>
								<xs:attribute name="attribName" type="xs:NMTOKEN" use="optional"/>
								<xs:attribute name="attribValue" type="xs:string" use="optional"/>
							</xs:complexType>
						</xs:element>
					</xs:sequence>
					<xs:attribute name="se" type="xs:string" use="required"/>
				</xs:complexType>
			</xs:element>
		</xs:sequence>
		<xs:attribute name="name" type="xs:string" use="required"/>
		<xs:attribute name="activation" type="Tactivation" use="required"/>
		<xs:attribute name="period" type="xs:float" use="optional"/>
	</xs:complexType>
	<!-- ======= IMPLEMENTATION ======= -->
	<xs:complexType name="Implementation">
		<xs:attribute name="name" type="xs:string" use="required"/>
		<xs:attribute name="class" type="xs:string" use="required"/>
		<xs:attribute name="maxMemory" type="xs:integer" use="required"/>
	</xs:complexType>
</xs:schema>
