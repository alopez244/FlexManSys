<xs:schema xmlns="Concepts" xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="Concepts" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<!-- ======= Manufacturing Plan======= -->
	<xs:complexType name="ManufacturingPlan">
		<xs:attribute name="name" type="xs:string" use="required"/>
	</xs:complexType>
	<!-- ======= Order======= -->
	<xs:complexType name="Order">
		<xs:attribute name="reference" type="xs:string" use="required"/>
		<xs:attribute name="customer" type="xs:string" use="optional"/>
	</xs:complexType>
	<!-- ======= Batch======= -->
	<xs:complexType name="Batch">
		<xs:attribute name="reference" type="xs:string" use="required"/>
		<xs:attribute name="numberOfItems" type="xs:integer" use="required"/>
		<xs:attribute name="refProductID" type="xs:string" use="required"/>
	</xs:complexType>
</xs:schema>
