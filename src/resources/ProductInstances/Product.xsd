<xs:schema xmlns="ManufacturingPlan" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:jaxb="http://java.sun.com/xml/ns/jaxb" targetNamespace="ManufacturingPlan" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<xs:include schemaLocation="../Base Schemas/IEC62264.xsd"/>
	<xs:include schemaLocation="../Base Schemas/Operations.xsd"/>
	<!-- Raw Material -->
	<xs:attributeGroup name="TMResource">
		<xs:attribute name="id" type="xs:string" use="required"/>
		<xs:attribute name="description" type="xs:string" use="required"/>
		<xs:attribute name="resourceType" type="TResource" use="required" fixed="material"/>
		<xs:attribute name="assembly_type" type="TAssemblyType" use="optional"/>
		<xs:attribute name="assembly_relationship" type="TAssemblyRelationShip" use="optional"/>
	</xs:attributeGroup>
	<xs:element name="rawMaterial">
		<xs:complexType>
			<xs:attributeGroup ref="TMResource"/>
		</xs:complexType>
	</xs:element>
	<!-- Product -->
	<xs:attributeGroup name="process">
		<xs:attribute name="id" type="xs:string" use="required"/>
		<xs:attribute name="description" type="xs:string" use="required"/>
		<xs:attribute name="hierarchy_level" type="TRecipeHLevel" use="required" fixed="process"/>
		<xs:attribute name="assembly_type" type="TAssemblyType" use="optional"/>
		<xs:attribute name="assembly_relationship" type="TAssemblyRelationShip" use="optional"/>
	</xs:attributeGroup>
	<xs:complexType name="TProduct">
		<xs:choice>
			<xs:element ref="rawMaterial" maxOccurs="1"/>
			<xs:sequence>
				<xs:annotation>
					<xs:documentation>t1 and t2</xs:documentation>
				</xs:annotation>
				<xs:element name="simple_operation" type="SimpleOperation"/>
				<xs:choice>
					<xs:element ref="rawMaterial"/>
					<xs:element name="Product" type="TProduct"/>
				</xs:choice>
			</xs:sequence>
			<xs:sequence>
				<xs:annotation>
					<xs:documentation>t3</xs:documentation>
				</xs:annotation>
				<xs:element name="complex_operation" type="ComplexOperation"/>
				<xs:element name="Product" type="TProduct" minOccurs="2" maxOccurs="2"/>
			</xs:sequence>
		</xs:choice>
		<xs:attributeGroup ref="process"/>
	</xs:complexType>
	<xs:element name="Product" type="TProduct"/>
</xs:schema>
