# Parametro importante, nos dife cuanto ocupa el robot en el espacio
# si el robot es circular, hay que especificarle con el parametro robot_radius

# HAY QUE CAMBIAR A ROBOT_RADIUS
#footprint: [[-0.5, -0.33], [-0.5, 0.33], [0.5, 0.33], [0.5, -0.33]] 
robot_radius: 0.2
footprint_padding: 0.01

robot_base_frame: base_link
update_frequency: 4.0
publish_frequency: 3.0
#El valor maximo que permite de transform_tolerance es 10 segundos
#Un valor bueno es 0.3 o menos
transform_tolerance: 0.5


resolution: 0.05

obstacle_range: 5.5
raytrace_range: 6.0

#layer definitions
static:
    map_topic: /map
    subscribe_to_updates: true



obstacles_laser:
    observation_sources: laser
    laser: {data_type: LaserScan, clearing: true, marking: true, topic: scan, inf_is_valid: true}
    #el topico esta cambiado de scan a scan_lidar, el hokuyo
    #HAY QUE CAMBIAR EL TOPICO DE SCAN_LIDAR A SCAN EN FUNCIÃ“N DE SI TRABAJAMOS CON GAZEBO O REAL
     
inflation:
    inflation_radius: 1.0
